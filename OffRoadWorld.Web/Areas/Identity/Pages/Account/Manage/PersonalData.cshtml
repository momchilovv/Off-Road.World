@page

@inject IViewLocalizer Localizer

@model PersonalDataModel

@{
    ViewBag.Title = Localizer["Personal Data"];
    ViewBag.ActivePage = ManageNavPages.PersonalData;
}

<h3>@ViewBag.Title</h3>

<div class="row">
    <div class="col-md-6">
        <br />
        <p>@Localizer["Your account contains personal data that you have given us. This page allows you to download or delete that data."]</p>
        <br />
        <p>
            <strong>@Localizer["Deleting this data will permanently remove your account, and this cannot be recovered."]</strong>
        </p>
        <br />
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary" type="submit">@Localizer["Download"]</button>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">@Localizer["Delete"]</a>

        </form>
        <br />
        <p>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}