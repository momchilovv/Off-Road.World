@inject IViewLocalizer Localizer

@model List<NewsViewModel>

@{
    ViewBag.Title = Localizer["News"];
}

<h2 style="text-align: center;">Off-Road @Localizer["News"]</h2>

@if (Model.Any())
{
    @foreach (var article in Model)
    {
        <div class="card mb-4">
            <div class="card-body">
                <h4 class="card-title">@article.Title</h4>
                <p class="card-text">@article.Description</p>
                <a href="@article.Url" class="btn btn-primary" target="_blank">@Localizer["Read more"]</a>
            </div>
            <div class="card-footer">
                <small class="text-muted">@Localizer["Published at"] @article.PublishedAt!.Value.ToString("dd MMMM yyyy")</small>
            </div>
        </div>
    }
}
else
{
    <div class="text-center">
        <p class="display-6">@Localizer["There are no news to display."]</p>
    </div>
}