@model List<VehicleViewModel>
@{
    ViewBag.Title = "All Vehicles";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var vehicle in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
                 src="@vehicle.ImageUrl" alt="Vehicle Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@vehicle.Make</h5>
                <p class="mb-0">Model: @vehicle.Model</p>
                <p class="mb-0">Production Year: @vehicle.ProductionYear</p>
                <p>Category: @vehicle.Category</p>
            </div>

            <form class="input-group-sm" asp-controller="Vehicle" asp-action="GetVehicle" asp-route-id="@vehicle.Id">
                <input type="submit" value="Get Vehicle" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
        </div>
    }
</div>