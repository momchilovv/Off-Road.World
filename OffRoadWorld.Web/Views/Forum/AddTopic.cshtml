@model TopicFormModel

@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["Add Topic"];
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddTopic" method="post">
            <input type="hidden" name="categoryId" value="@Model.ForumId" />
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">@Localizer["Title"]</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Content" class="form-label-add-edit">@Localizer["Content"]</label>
                <textarea asp-for="@Model.Content" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-success" type="submit" value="@Localizer["Add"]" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}