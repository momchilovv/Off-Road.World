@model VehicleViewModel
@{
    ViewBag.Title = "Remove Vehicle";
}
<h4 class="text-center">Are you sure you want to remove your @Model.Make from the Marketplace?</h4>
<hr />
<form asp-action="Remove">
    <div class="d-flex justify-content-center">
        <div class="card " style="width: 30rem;">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Make</h3>
                <br />
                <p class="card-text" style="text-align:center;">
                    <span class="fw-bold">
                        Model:
                    </span>@Model.Model
                    <br />
                    <br />
                    <span class="fw-bold">
                        Production Year:
                    </span>@Model.ProductionYear
                    <br />
                    <br />
                    <span class="fw-bold">
                        Price:
                    </span>$@Model.Price
                </p>
            </div>
            <div class="mb-3 d-flex justify-content-center">
                <input type="submit" value="Remove" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>