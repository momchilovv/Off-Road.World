@inject IViewLocalizer Localizer

@model VehicleViewModel

@{
    ViewBag.Title = Localizer["Remove Vehicle"];
}
<h4 class="text-center">@Localizer["Are you sure you want to remove your {0} from the Marketplace?", Model.Make]</h4>
<hr />
<form asp-action="Remove">
    <div class="d-flex justify-content-center">
        <div class="card " style="width: 30rem;">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Make</h3>
                <br />
                <p class="card-text" style="text-align:center;">
                    <span class="fw-bold">
                        @Localizer["Model:"]
                    </span>@Model.Model
                    <br />
                    <br />
                    <span class="fw-bold">
                        @Localizer["Production Year:"]
                    </span>@Model.ProductionYear
                    <br />
                    <br />
                    <span class="fw-bold">
                        @Localizer["Price:"]
                    </span>$@Model.Price
                </p>
            </div>
            <div class="mb-3 d-flex justify-content-center">
                <input type="submit" value="@Localizer["Remove"]" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>