@inject IViewLocalizer Localizer

@model AddFundsFormModel

@{
    ViewBag.Title = Localizer["Add funds"];
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddFunds" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Amount" class="form-label">@Localizer["Amount"]</label>
                <input asp-for="@Model.Amount" class="form-control" aria-required="true" value="@Model.Amount" />
                <span asp-validation-for="@Model.Amount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-success" type="submit" value="@Localizer["Add"]" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}