@model List<EventViewModel>
﻿@{
    ViewBag.Title = "Joined Events";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @if (Model.Any())
    {
        @foreach (var e in Model)
        {
            <div class="card col-4" style="width: 20rem; ">
                <div class="card-body">
                    <h5 class="card-title mt-1">@e.Title</h5>
                    <p class="mb-0"><span class="fw-bold">Start: </span>@e.Start</p>
                    <p class="mb-0"><span class="fw-bold">End: </span>@e.End</p>
                    <p class="mb-0"><span class="fw-bold">Type: </span>@e.Category</p>
                </div>

                @if (User.Identity!.Name == e.Owner)
                {
                    <a asp-controller="Event" asp-action="Details" asp-route-id="@e.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">View Details</a>
                    <a asp-controller="Event" asp-action="Edit" asp-route-id="@e.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit</a>
                }
                else
                {
                    <form class="input-group-sm " asp-controller="Event" asp-action="LeaveEvent" asp-route-id="@e.Id">
                        <input type="submit" value="Leave the Event" class="fs-6 btn btn-warning mb-3 w-100 p-3 fw-bold" />
                    </form>
                    <a asp-controller="Event" asp-action="Details" asp-route-id="@e.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">View Details</a>
                }
            </div>
        }
    }
    else
    {
        <div class="text-center">
            <p class="display-6">You are not participating in any events.</p>
            <p class="display-7">You can browse all open events <a href="/Event/All">here</a>.</p>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}