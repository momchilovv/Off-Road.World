@model EventDetailsViewModel
@{
    ViewBag.Title = $"{Model.Title} Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="card w-100">
        <div class="card-body">
            <h3 class="card-title text-center">@Model.Title</h3>
            <p class="mb-0"><span class="fw-bold">Description: </span>@Model.Description</p>
            <p class="mb-0"><span class="fw-bold">Starts at: </span>@Model.Start.ToString("dd-MM-yyyy HH:mm")</p>
            <p class="mb-0"><span class="fw-bold">Ends at: </span>@Model.End.ToString("dd-MM-yyyy HH:mm")</p>
            <p class="mb-0"><span class="fw-bold">Owner: </span>@Model.Owner</p>
            <p class="mb-0"><span class="fw-bold">Created on: </span>@Model.CreatedOn.ToString("dd-MM-yyyy HH:mm")</p>
            <p class="mb-0"><span class="fw-bold">Category: </span>@Model.Category</p>
            <p class="mb-0"><span class="fw-bold">Participants: </span>@Model.TotalParticipants</p>
        </div>

        <a asp-controller="Event" asp-action="All" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Back to All Events</a>
        @if (User.Identity!.Name == Model.Owner)
        {
            <a asp-controller="Event" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit</a>
        }

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}